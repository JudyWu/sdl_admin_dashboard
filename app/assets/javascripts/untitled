function showYesterdaySummary(username, date, device, token) {
    $.ajax({
        type: 'GET',
        url: dsu + "dataPoints/" + getSummaryDatapointID(username, date, device),
        headers: {
            "Authorization": "Bearer " + token
        },
        success: function(data) {
            var yesterday_distance = (data.body["walking_distance_in_km"]*0.621371192).toFixed(2);
            console.log(yesterday_distance);
            var yesterday_speed = data.body["max_gait_speed_in_meter_per_second"];
            console.log(yesterday_speed);
            var yesterday_away = data.body["time_not_at_home_in_seconds"];
            console.log(yesterday_away);

        },
        error: function(data) {
            var yesterday_distance = 0;
            console.log(yesterday_distance);
            var yesterday_speed = 0;
            console.log(yesterday_speed);
            var yesterday_away = 0;
            console.log(yesterday_away);


        }
    });
}